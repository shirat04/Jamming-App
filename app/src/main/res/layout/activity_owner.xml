<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OwnerActivity">

    <!-- ðŸ”µ TOP BAR (Greeting + Profile + Notifications) -->
    <LinearLayout
        android:id="@+id/ownerTopBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#0B375E"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Greeting -->
        <TextView
            android:id="@+id/ownerGreeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hello_owner"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Profile Icon -->
        <ImageButton
            android:id="@+id/btnOwnerProfile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/baseline_person"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,UseAppTint,TouchTargetSizeCheck" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <!-- Notifications Icon -->
        <ImageButton
            android:id="@+id/btnOwnerNotifications"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/outline_add_alert"
            app:tint="@android:color/white"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>


    <!-- ðŸŸ  Create Event Button -->
    <Button
        android:id="@+id/createEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_event"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/ownerTopBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- ðŸŸ£ My Events Title -->
    <TextView
        android:id="@+id/myEventsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_events"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/createEventButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- ðŸŸ¢ Event List (Scroll View) -->
    <ScrollView
        android:id="@+id/eventList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/myEventsTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EVENT CARD EXAMPLE -->
            <androidx.cardview.widget.CardView
                android:id="@+id/eventExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/jazz_open_mic_night"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                    <TextView
                        android:text="@string/cafe_jazz_downtown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:text="@string/date_15_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/jazz_blues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/spots_50_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_marginVertical="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnEditEvent"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:backgroundTint="#1E63E9"
                            android:text="@string/edit_details"
                            android:textColor="@android:color/white"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,DuplicateSpeakableTextCheck" />

                        <Button
                            android:id="@+id/btnCancelEvent"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:backgroundTint="#E53935"
                            android:text="@string/cancel_event"
                            android:textColor="@android:color/white"
                            tools:ignore="ButtonStyle,TextContrastCheck,VisualLintButtonSize,DuplicateSpeakableTextCheck" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- â­ EVENT #2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/event2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rock_band_thunder"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stadium_xxz"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_20_01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rock_metal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spots_12_100"
                        android:layout_marginTop="6dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_marginVertical="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/editDetailsEvent2"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="@string/edit_details"
                            android:textColor="@android:color/white"
                            android:backgroundTint="#1E63E9"
                            android:layout_margin="4dp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize" />

                        <Button
                            android:id="@+id/cancelEvent2"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:backgroundTint="#E53935"
                            android:text="@string/cancel_event"
                            android:textColor="@android:color/white"
                            tools:ignore="ButtonStyle,TextContrastCheck,VisualLintButtonSize" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


    <!-- ðŸŸ¡ Floating Add Button -->

</androidx.constraintlayout.widget.ConstraintLayout>
