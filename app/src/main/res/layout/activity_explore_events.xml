<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreEventsActivity">

    <!-- ðŸ”µ ×¤×¡ ×¢×œ×™×•×Ÿ -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:background="#0B375E"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/exploreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Hello_User_title"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/exploreLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_location"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

    <!-- ðŸŸ¡ ×©×•×¨×ª ×›×¤×ª×•×¨×™ ×¤×™×œ×˜×¨ ×¢×’×•×œ×™× -->
    <HorizontalScrollView
        android:id="@+id/filtersScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- ×›×¤×ª×•×¨ ×ž×¨×—×§ -->
            <Button
                android:id="@+id/filterDistance"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#FF6F6F"
                android:text="@string/locationTag"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <!-- ×›×¤×ª×•×¨ ×ª××¨×™×š -->
            <Button
                android:id="@+id/filterDate"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#FFA84B"
                android:text="@string/boardTag"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <!-- ×›×¤×ª×•×¨ ×©×¢×” -->
            <Button
                android:id="@+id/filterTime"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#FFCE47"
                android:text="@string/timeTag"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <!-- ×›×¤×ª×•×¨ ×ž×•×–×™×§×” -->
            <Button
                android:id="@+id/filterMusic"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#41C463"
                android:text="@string/musicTag"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <!-- ×›×¤×ª×•×¨ ×’×•×“×œ ××™×¨×•×¢ -->
            <Button
                android:id="@+id/filterCapacity"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#63A5FF"
                android:text="@string/peopleTag"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <!-- ×›×¤×ª×•×¨ ×ž×•×¢×“×¤×™× -->
            <Button
                android:id="@+id/filterFavorite"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#2D7AD8"
                android:text="@string/starTag"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_margin="6dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- ðŸŸ¢ ×ª×ªÖ¾×¤×™×œ×˜×¨×™× ×˜×§×¡×˜×•××œ×™×™× -->
    <LinearLayout
        android:id="@+id/textFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/filtersScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/events_near_me"
            android:textSize="20sp"
            android:textColor="#2E7D32"
            android:padding="4dp"/>


    </LinearLayout>

    <!-- ðŸ—ºï¸ ×ª×ž×•× ×ª ×ž×¤×” -->
    <FrameLayout
        android:id="@+id/mapPreview"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_margin="16dp"
        android:background="#D6E4FF"
        app:layout_constraintTop_toBottomOf="@+id/textFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_placeholder"
            android:layout_gravity="center"
            android:textColor="#3A4A6B"/>

    </FrameLayout>

    <!-- ×¨×©×™×ž×ª ××™×¨×•×¢×™× (×›×ž×• ××¦×œ ×‘×¢×œ×™ ×”×¢×¡×§) -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/mapPreview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EVENT CARD 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="@string/jazz_open_mic"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/cafe_blue_note_7_pm"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:text="@string/jazz"
                        android:textColor="#E86A00"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- EVENT CARD 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="@string/rock_night"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/the_cavern_blues"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:text="@string/rock"
                        android:textColor="#0057E7"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- EVENT CARD 3 â€“ ×œ×“×•×’×ž×” -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="@string/open_jam_session"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/downtown_pub_19_30"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:text="@string/mixed"
                        android:textColor="#008744"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
