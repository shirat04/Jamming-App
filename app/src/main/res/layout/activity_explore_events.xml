<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ExploreEventsActivity">

    <!--  驻住 注 -->
    <!--  砖专转 驻转专 驻专 注 -->

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="411dp"
        android:layout_height="106dp"
        android:layout_weight="0"
        android:background="#0B375E"
        android:gravity="center_vertical"
        android:minHeight="110dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck">

        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_menu_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btnProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/baseline_person"
                app:tint="@android:color/white"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/exploreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/Hello_User_title"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/exploreLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:alpha="0.85"
                    android:text="@string/explore_location"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/filtersScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 驻转专 专拽 -->
            <Button
                android:id="@+id/filterDistance"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#FF6F6F"
                android:text="@string/locationTag"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <!-- 驻转专 转专 -->
            <Button
                android:id="@+id/filterDate"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#FFA84B"
                android:text="@string/boardTag"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <!-- 驻转专 砖注 -->
            <Button
                android:id="@+id/filterTime"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#FFCE47"
                android:text="@string/timeTag"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <!-- 驻转专 拽 -->
            <Button
                android:id="@+id/filterMusic"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#41C463"
                android:text="@string/musicTag"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <!-- 驻转专  专注 -->
            <Button
                android:id="@+id/filterCapacity"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#63A5FF"
                android:text="@string/peopleTag"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <!-- 驻转专 注驻 -->
            <Button
                android:id="@+id/filterFavorite"
                style="?attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:backgroundTint="#2D7AD8"
                android:text="@string/starTag"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!--  转转志驻专 拽住 -->
    <LinearLayout
        android:id="@+id/textFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/filtersScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnEventsNearMe"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#2E7D32"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="@string/events_near_me"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnMyEvents"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="#145A94"
            android:minHeight="48dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="@string/my_events"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="35dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFilters"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="FragmentTagUsage" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 专注 爪"
        android:textSize="18sp"
        android:textColor="#777777"
        android:background="@android:color/white"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mapFragment"
        app:layout_constraintBottom_toBottomOf="@id/mapFragment"
        app:layout_constraintStart_toStartOf="@id/mapFragment"
        app:layout_constraintEnd_toEndOf="@id/mapFragment"/>


    <LinearLayout
        android:id="@+id/radiusControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="56dp"
        android:alpha="0.8"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/mapFragment"
        app:layout_constraintEnd_toEndOf="@id/mapFragment">

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="212dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapPreview"
        tools:ignore="UnknownId" />


</androidx.constraintlayout.widget.ConstraintLayout>
