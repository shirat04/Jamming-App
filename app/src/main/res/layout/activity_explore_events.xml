<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ExploreEventsActivity">

    <!-- ðŸ”µ ×¤×¡ ×¢×œ×™×•×Ÿ -->

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="95dp"
        android:background="#0B375E"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- â˜° ×ª×¤×¨×™×˜ -->
        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_menu_24"
            app:tint="@android:color/white" />

        <!-- ×¨×•×•×— ×§×˜×Ÿ ×‘×œ×‘×“ -->
        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <!-- ×¤×¨×•×¤×™×œ + ×˜×§×¡×˜ -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btnProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_person"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/exploreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello User"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/filtersScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@android:color/white"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ×¢×˜×™×¤×” ×©×ª×•×¤×¡×ª ××ª ×›×œ ×”×¨×•×—×‘ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!-- ×”×©×•×¨×” ×”××ž×™×ª×™×ª ×©×œ ×”×›×¤×ª×•×¨×™× -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- ×›×¤×ª×•×¨ ×ž×¨×—×§ -->
                <Button
                    android:id="@+id/filterDistance"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:backgroundTint="#FF6F6F"
                    android:text="@string/locationTag"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <!-- ×›×¤×ª×•×¨ ×ª××¨×™×š -->
                <Button
                    android:id="@+id/filterDate"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:backgroundTint="#FFA84B"
                    android:text="@string/boardTag"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <!-- ×›×¤×ª×•×¨ ×©×¢×” -->
                <Button
                    android:id="@+id/filterTime"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:backgroundTint="#FFCE47"
                    android:text="@string/timeTag"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <!-- ×›×¤×ª×•×¨ ×ž×•×–×™×§×” -->
                <Button
                    android:id="@+id/filterMusic"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:backgroundTint="#41C463"
                    android:text="@string/musicTag"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <!-- ×›×¤×ª×•×¨ ×’×•×“×œ -->
                <Button
                    android:id="@+id/filterCapacity"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="6dp"
                    android:backgroundTint="#63A5FF"
                    android:text="@string/peopleTag"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


    <!-- ðŸŸ¢ ×ª×ªÖ¾×¤×™×œ×˜×¨×™× ×˜×§×¡×˜×•××œ×™×™× -->
    <LinearLayout
        android:id="@+id/textFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/filtersScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnEventsNearMe"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="16dp"
            android:text="Events Near Me"
            android:textAllCaps="false"
            android:backgroundTint="@color/secondaryRed"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnAllEvents"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:text="All Events"
            android:backgroundTint="@color/primaryPurple"
            android:textAllCaps="false"
            android:layout_marginHorizontal="6dp"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnMyEvents"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="130dp"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="16dp"
            android:text="My Events"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:backgroundTint="@color/divider"
            android:textColor="@android:color/white"/>

    </LinearLayout>


    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFilters"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="FragmentTagUsage" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="××™×Ÿ ××™×¨×•×¢×™× ×œ×”×¦×’×”"
        android:textSize="18sp"
        android:textColor="#777777"
        android:background="@android:color/white"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mapFragment"
        app:layout_constraintBottom_toBottomOf="@id/mapFragment"
        app:layout_constraintStart_toStartOf="@id/mapFragment"
        app:layout_constraintEnd_toEndOf="@id/mapFragment"/>


    <LinearLayout
        android:id="@+id/radiusControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="56dp"
        android:alpha="0.8"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/mapFragment"
        app:layout_constraintEnd_toEndOf="@id/mapFragment">

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="212dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapPreview"
        tools:ignore="UnknownId" />


</androidx.constraintlayout.widget.ConstraintLayout>
