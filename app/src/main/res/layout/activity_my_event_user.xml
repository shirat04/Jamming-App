<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MyEventUserActivity">


    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/topBarMyEvents"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#0B375E"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/myEventsTitleTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/my_events"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnProfileMyEvents"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/profile"
            app:srcCompat="@drawable/baseline_person"
            app:tint="@android:color/white"
            tools:ignore="TouchTargetSizeCheck" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnNotificationsMyEvents"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/notifications"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/outline_add_alert"
            tools:ignore="UseAppTint,TouchTargetSizeCheck" />

    </LinearLayout>

    <!-- TITLE UNDER TOP BAR -->
    <TextView
        android:id="@+id/myEventsSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_events_subtitle"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBarMyEvents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LIST OF REGISTERED EVENTS -->
    <ScrollView
        android:id="@+id/myEventsScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myEventsSubtitle"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EVENT CARD EXAMPLE -->
            <androidx.cardview.widget.CardView
                android:id="@+id/myEvent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myEventTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_event_title"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/myEventLocation1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/sample_event_location" />

                    <TextView
                        android:id="@+id/myEventDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_event_date" />

                    <TextView
                        android:id="@+id/myEventStatus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/registered"
                        android:textColor="#2E7D32"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="#DDDDDD" />

                    <LinearLayout
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnMyEventDetails1"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:backgroundTint="#1E63E9"
                            android:text="@string/view_details"
                            android:textColor="@android:color/white"
                            tools:ignore="VisualLintButtonSize" />

                        <Button
                            android:id="@+id/btnCancelMyEvent1"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:backgroundTint="#E53935"
                            android:text="@string/cancel_registration"
                            android:textColor="@android:color/white"
                            tools:ignore="TextContrastCheck,VisualLintButtonSize" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- אפשר להוסיף עוד כרטיסים דומים כאן -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
