<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- הרשאות מיקום -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jamming">
        <activity
            android:name=".view.EditProfileUserActivity"
            android:exported="false" />
        <activity
            android:name=".view.MapPickerActivity"
            android:exported="false" />
        <activity
            android:name=".view.UpdateOwnerDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".view.EditEventActivity"
            android:exported="false" />
        <activity
            android:name=".view.NotificationsOwnerActivity"
            android:exported="false" />
        <activity
            android:name=".view.NotificationsUserActivity"
            android:exported="false" />
        <activity
            android:name=".view.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.MyEventUserActivity"
            android:exported="false" />
        <activity
            android:name=".view.profilePreferencesActivity"
            android:exported="false" />
        <activity
            android:name=".view.EventDetailActivity"
            android:exported="false" />
        <activity
            android:name=".view.CreateNewEventActivity"
            android:exported="false" />
        <activity
            android:name=".view.ExploreEventsActivity"
            android:exported="false" />
        <activity
            android:name=".view.OwnerActivity"
            android:exported="false" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Jamming">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
    </application>

</manifest>